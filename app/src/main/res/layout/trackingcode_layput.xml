<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/TrackingCode_Card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:background="#FFF">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_check_mark"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:id="@+id/TrackingCode_Image"/>

    <www.municipality.ir.takestanmunicipality.Views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#000"
        android:textSize="15sp"
        android:gravity="center_vertical|right"
        android:layout_toLeftOf="@+id/TrackingCode_Image"
        android:layout_marginRight="10dp"
        android:text="سجاد جعفری"
        android:id="@+id/TrackingCode_Content"/>


    <www.municipality.ir.takestanmunicipality.Views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#666"
        android:textSize="12sp"
        android:gravity="right|center_vertical"
        android:layout_toLeftOf="@+id/TrackingCode_Image"
        android:layout_marginRight="10dp"
        android:text="سجاد جعفری"
        android:id="@+id/TrackingCode_Code"
        android:layout_below="@+id/TrackingCode_Content" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#999"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>