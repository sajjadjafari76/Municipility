<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:layout_height="100dp"
    android:id="@+id/CustomTable_Root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="12"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="8.3"
            android:orientation="vertical">

            <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                android:id="@+id/CustomTable_Name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#000"
                android:textSize="@dimen/Standard_Size_Text"
                android:layout_marginTop="7dp"
                android:layout_marginRight="5dp"
                android:singleLine="true"/>

            <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                android:id="@+id/CustomTable_Start"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="#000"
                android:visibility="gone"
                android:textSize="@dimen/Standard_Size_Text"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"/>

            <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                android:id="@+id/CustomTable_End"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:visibility="gone"
                android:textColor="#000"
                android:textSize="@dimen/Standard_Size_Text"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"/>


        </LinearLayout>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.7"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:id="@+id/CustomTable_Image"/>

    </LinearLayout>

</RelativeLayout>