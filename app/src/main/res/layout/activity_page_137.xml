<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context=".Page_137.Page_137"
    android:id="@+id/Page_137_Container">


    <android.support.v7.widget.Toolbar
        android:id="@+id/page_137_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/back_toolbar_color"
        android:elevation="4dp"
        app:contentInsetStart="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="سامانه ارتباط مردمی 137"
                android:textColor="#FFF" />


            <ImageView
                android:id="@+id/page_137_Backwards"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="5dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/ic_left_arrow" />

            <!--android:foreground="?android:attr/selectableItemBackgroundBorderless"-->


            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:src="@drawable/logo_w"
                android:layout_alignParentRight="true"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:paddingTop="6dp"
                android:layout_marginLeft="1dp"/>



        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Page137_Scrool"
        android:layout_below="@+id/page_137_Toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">


                    <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="شرح پیام"
                        android:textColor="#000"
                        android:textSize="16sp" />


                    <Spinner
                        android:id="@+id/Page_137_SpinnerSubjectType"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/back_spinner"
                        android:focusableInTouchMode="true"
                        android:layoutDirection="rtl"
                        android:popupBackground="#62ffffff"
                        android:soundEffectsEnabled="true"
                        android:spinnerMode="dialog" />

                    <Spinner
                        android:id="@+id/Page_137_SpinnerSubjectTypeSubCategory"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/back_spinner"
                        android:focusableInTouchMode="true"
                        android:layoutDirection="rtl"
                        android:popupBackground="#62ffffff"
                        android:soundEffectsEnabled="true"
                        android:spinnerMode="dialog"
                        android:visibility="gone"/>

                    <Spinner
                        android:id="@+id/Page_137_SpinnerSubjectTypeSubCategoryOne"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/back_spinner"
                        android:focusableInTouchMode="true"
                        android:layoutDirection="rtl"
                        android:popupBackground="#62ffffff"
                        android:soundEffectsEnabled="true"
                        android:spinnerMode="dialog"
                        android:visibility="gone"/>

                    <!--<Spinner-->
                    <!--android:id="@+id/Page_137_SpinnerRegion"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="46dp"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginRight="18dp"-->
                    <!--android:layout_marginLeft="18dp"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--android:background="@drawable/back_spinner"-->
                    <!--android:layoutDirection="rtl"-->
                    <!--android:popupBackground="#62ffffff"-->
                    <!--android:soundEffectsEnabled="true"-->
                    <!--android:spinnerMode="dialog"-->
                    <!--android:saveEnabled="true"/>-->


                    <www.municipality.ir.takestanmunicipality.Views.CustomEdittext
                        android:id="@+id/Page_137_Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/back_message_137"
                        android:hint="*متن پیام"
                        android:lines="5"
                        android:padding="8dp"
                        android:textSize="16sp" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="مشخصات"
                        android:textColor="#000"
                        android:textSize="16sp" />


                    <www.municipality.ir.takestanmunicipality.Views.CustomEdittext
                        android:id="@+id/Page_137_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/back_message_137"
                        android:hint="*نام"
                        android:padding="8dp"
                        android:textSize="16sp" />


                    <www.municipality.ir.takestanmunicipality.Views.CustomEdittext
                        android:id="@+id/Page_137_Family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/back_message_137"
                        android:hint="*نام خانوادگی"
                        android:padding="8dp"
                        android:textSize="16sp" />


                    <www.municipality.ir.takestanmunicipality.Views.CustomEdittext
                        android:id="@+id/Page_137_NationalCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="8dp"
                        android:maxEms="10"
                        android:background="@drawable/back_message_137"
                        android:hint="*کد ملی"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="شماره تماس"
                        android:textColor="#000"
                        android:textSize="16sp" />



                    <www.municipality.ir.takestanmunicipality.Views.CustomEdittext
                        android:id="@+id/Page_137_Phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/back_message_137"
                        android:hint="*همراه"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="نقشه"
                        android:textColor="#000"
                        android:textSize="16sp" />


                    <!--<com.google.android.gms.maps.MapView-->
                        <!--android:id="@+id/map1"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="200dp"/>-->

                    <fragment
                        android:tag="map1"
                        android:id="@+id/map1"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        class="www.municipality.ir.takestanmunicipality.IntroduceCity.Maps.WorkaroundMapFragment"/>



                    <www.municipality.ir.takestanmunicipality.Views.CustomEdittext
                        android:id="@+id/Page_137_Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_message_137"
                        android:hint="*نشانی"
                        android:lines="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:scrollHorizontally="true"/>

     <!--               <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/Page137_AddressName"
                        android:gravity="center"
                        android:textColor="#000"
                        android:scrollHorizontally="true"/>-->

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="1dp">

                <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:padding="8dp"
                    android:text="فایل ضمیمه"
                    android:textColor="#000"
                    android:textSize="16sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">


                    <LinearLayout
                        android:id="@+id/Page_137_View"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="45dp"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <LinearLayout
                            android:id="@+id/Page_137_Voice_Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/microphone" />

                            <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="صدا"
                                android:textColor="#000"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:id="@+id/Page_137_Video_Btn">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/photo_camera" />

                            <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="فیلم"
                                android:textColor="#000"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/Page_137_Image_Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/clapperboard" />

                            <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="تصویر"
                                android:textColor="#000"
                                android:textSize="12sp" />


                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/Page_137_Result"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_below="@+id/Page_137_View"
                        android:textColor="#000" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp">

                <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                    android:id="@+id/Page_137_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingEnd="50dp"
                    android:paddingStart="50dp"
                    android:paddingTop="12dp"
                    android:text="ارسال پیام"
                    android:textColor="#FFF" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>