<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".IntroduceCity.Handicrafts.Handicrafts_LayeChini">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/LayeChini_Pager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/LayeChini_Indigator"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_alignParentBottom="true"
                    android:layoutDirection="ltr" />

            </RelativeLayout>

            <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                android:id="@+id/GelimBafi_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/Standard_Size_Text"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:textColor="#000"
                android:text="هنر لایه چینی یکی از هنرهای سنتی ایرانی در صنایع چوب سازی است که در آن لایه های مختلف چوب پس از اشباع شدن در کنار هم چیده و سپس بوسیله دستگاه های تراش چوب به فرم دلخواه در میاد. روغنی که در پرداخت این ظروف به کار میرود علاوه بر لطافت و زیبایی در مقابل رطوبت و مواد غذایی مقاوم است.

در سال 1390 محصولات هنرمند تاکستان در حوزه لایه چینی آقای حسن رحمانی  نشان ملي و مهر اصالت  بين المللي  يونسكو را دریافت نموده است.
"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</ScrollView>