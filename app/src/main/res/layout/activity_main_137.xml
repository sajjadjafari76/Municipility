<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".Page_137.Main_137">


    <android.support.v7.widget.Toolbar
        android:id="@+id/Main137_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/back_toolbar_color"
        android:elevation="4dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <www.municipality.ir.takestanmunicipality.Views.CustomTextView
                android:id="@+id/Main137_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="سامانه ارتباط مردمی 137"
                android:textColor="#FFF" />

            <ImageView
                android:id="@+id/Main137_Backwards"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="5dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/ic_left_arrow" />
            <!--android:foreground="?android:attr/selectableItemBackgroundBorderless"-->


            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="6dp"
                android:src="@drawable/logo_w" />


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/Main137_Image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-100dp"
        app:srcCompat="@drawable/ic_logo_green" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="3">

        <Button
            android:id="@+id/Main137_Register"
            android:layout_width="230dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_below="@+id/Main137_Image"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_myedit"
            android:text="ثبت درخواست" />

        <Button
            android:id="@+id/Main137_MyRequest"
            android:layout_width="230dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_below="@+id/Main137_Register"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_myinbox"
            android:text="درخواست های من"
            android:layout_marginTop="10dp"/>


        <Button
            android:id="@+id/Main137_Track"
            android:layout_width="230dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_below="@+id/Main137_MyRequest"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_job"
            android:text="پیگیری درخواست"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</LinearLayout>