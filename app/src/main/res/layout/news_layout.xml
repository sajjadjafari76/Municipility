<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#FFF">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/NewsLayout_Image"
            android:layout_marginBottom="10dp"/>

        <www.municipality.ir.takestanmunicipality.Views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="عنوان"
            android:textSize="15sp"
            android:textColor="#000"
            android:id="@+id/NewsLayout_Topic"/>

        <www.municipality.ir.takestanmunicipality.Views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#888"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:id="@+id/NewsLayout_Content"/>

        <www.municipality.ir.takestanmunicipality.Views.CustomTextView
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="12/11/1396"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:background="#f9f9f9"
            android:id="@+id/NewsLayout_Date"/>

    </LinearLayout>

</android.support.v7.widget.CardView>